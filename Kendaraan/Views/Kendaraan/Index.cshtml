@model IEnumerable<Kendaraan.Models.KendaraanModel>

@{
    ViewData["Title"] = "Data Kendaraan";
}

<h1>Data Kendaraan</h1>
<form method="get" asp-action="Index" class="d-flex align-items-start">
    <div class="form-group me-2">
        <input type="text" name="searchnameString" class="form-control" placeholder="Cari nama pemilik" />
    </div>
    <div class="form-group me-2">
        <input type="text" name="searchregisString" class="form-control" placeholder="Cari nomor registrasi" />
    </div>
    <div class="ms-auto">
        <button type="submit" class="btn btn-primary me-2">Search</button>
        <a asp-action="Create" class="btn btn-primary">Create</a>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NamaPemilik)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoRegistrasi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MerkKendaraan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TahunPembuatan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kapasitas)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Warna)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BahanBakar)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NamaPemilik)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NoRegistrasi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MerkKendaraan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TahunPembuatan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kapasitas) CC
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Warna)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BahanBakar)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.NoRegistrasi">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.NoRegistrasi">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.NoRegistrasi" onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
